<theme>
    <include>./colorschemes.xml</include>
    
    <view name="system,gamelist">
        <!-- global textlist across all views, simple way to launch your games! -->
        <textlist name="global-list">
            <pos>0 0</pos>
            <size>1 1</size>

            <fontPath>./fonts/ArcadePix.ttf</fontPath>
            <fontSize>0.030</fontSize>
            <primaryColor>${textlistPrimaryColor}</primaryColor>
            <secondaryColor>${textlistPrimaryColor}</secondaryColor>

            <lineSpacing>1</lineSpacing>
            <horizontalMargin>0.005</horizontalMargin>

            <selectorHeight>0.03</selectorHeight>
            <selectorVerticalOffset>0.007</selectorVerticalOffset>
            <selectorColor>${textlistSelectorColor}</selectorColor>
            <selectedColor>${textlistSelectedColor}</selectedColor>

            <systemNameSuffix>false</systemNameSuffix>
            <indicators>ascii</indicators>

            <zIndex>99</zIndex>
        </textlist>

        <!-- hide the help system -->
        <helpsystem name="help">
            <textColor>00000000</textColor>
            <iconColor>00000000</iconColor>
        </helpsystem>
    </view>

    <variant name="gamelist-images">
        <view name="gamelist">
            <image name="game-img">
                <origin>0.5 0.5</origin>
                <pos>0.5 0.5</pos>
                <maxSize>1 1</maxSize>
                <imageType>screenshot, titlescreen, cover</imageType>

                <brightness>-1.5</brightness>

                <scrollFadeIn>true</scrollFadeIn>
                
                <zIndex>60</zIndex>
            </image>
        </view>
    </variant>
    <variant name="gamelist-videos">
        <view name="gamelist">
            <video name="game-video">
                <origin>0.5 0.5</origin>
                <pos>0.5 0.5</pos>
                <maxSize>1 1</maxSize>

                <imageType>screenshot, titlescreen, cover</imageType>
                <brightness>-1.5</brightness>

                <audio>false</audio>
                <delay>0.5</delay>
                <scrollFadeIn>true</scrollFadeIn>
                <scanlines>true</scanlines>

                <zIndex>60</zIndex>
            </video>
        </view>
    </variant>
</theme>
