<themeCapabilities>
    <themeName>SimpleMenu</themeName>

    <!-- COLORSCHEMES -->
    <colorScheme name="monochrome">
        <label>Monochrome</label>
    </colorScheme>
    <colorScheme name="red">
        <label>Red</label>
    </colorScheme>
    <colorScheme name="green">
        <label>Green</label>
    </colorScheme>
    <colorScheme name="blue">
        <label>Blue</label>
    </colorScheme>
    <colorScheme name="gold">
        <label>Gold</label>
    </colorScheme>
    <colorScheme name="pink">
        <label>Pink</label>
    </colorScheme>
    <colorScheme name="purple">
        <label>Purple</label>
    </colorScheme>

    <!-- VARIANTS -->
    <variant name="images-defaultbg">
        <label>Default background | Images behind game list</label>
        <selectable>true</selectable>
    </variant>
    <variant name="videos-defaultbg">
        <label>Default background | Videos behind game list</label>
        <selectable>true</selectable>
    </variant>
    <variant name="nomedia-defaultbg">
        <label>Default background | No media in game list</label>
        <selectable>true</selectable>
    </variant>
    <variant name="images-custombg">
        <label>Custom background | Images behind game list</label>
        <selectable>true</selectable>
    </variant>
    <variant name="videos-custombg">
        <label>Custom background | Videos behind game list</label>
        <selectable>true</selectable>
    </variant>
    <variant name="nomedia-custombg">
        <label>Custom background | No media in game list</label>
        <selectable>true</selectable>
    </variant>
    <variant name="nomedia-nobg">
        <label>No background & No media</label>
        <selectable>true</selectable>
    </variant>

    <!-- TRANSITION PROFILES -->
    <suppressTransitionProfiles>
        <entry>builtin-instant</entry>
        <entry>builtin-slide</entry>
        <entry>builtin-fade</entry>
    </suppressTransitionProfiles>
</themeCapabilities>
