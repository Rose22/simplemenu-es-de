<themeCapabilities>
    <themeName>SimpleMenu</themeName>

    <!-- COLORSCHEMES -->
    <colorScheme name="monochrome">
        <label>Monochrome</label>
    </colorScheme>
    <colorScheme name="red">
        <label>Red</label>
    </colorScheme>
    <colorScheme name="green">
        <label>Green</label>
    </colorScheme>
    <colorScheme name="blue">
        <label>Blue</label>
    </colorScheme>
    <colorScheme name="gold">
        <label>Gold</label>
    </colorScheme>
    <colorScheme name="pink">
        <label>Pink</label>
    </colorScheme>
    <colorScheme name="purple">
        <label>Purple</label>
    </colorScheme>

    <!-- VARIANTS -->
    <variant name="gamelist-images">
        <label>images behind game list</label>
        <selectable>true</selectable>
    </variant>
    <variant name="gamelist-videos">
        <label>videos behind game list</label>
        <selectable>true</selectable>
    </variant>
    <variant name="gamelist-none">
        <label>no background in game list</label>
        <selectable>true</selectable>
    </variant>

    <!-- TRANSITION PROFILES -->
    <suppressTransitionProfiles>
        <entry>builtin-slide</entry>
        <entry>builtin-fade</entry>
    </suppressTransitionProfiles>
</themeCapabilities>
